{
  "name": "flexprice-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for FlexPrice invoice and customer data access",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "generate": "npx openapi-mcp-generator --input swagger/swagger-3-0.json --output generated-mcp-server --server-name flexprice-mcp --force",
    "generate:install": "npm run generate && cd generated-mcp-server && npm install",
    "run:generated": "cd generated-mcp-server && npm start"
  },
  "keywords": [
    "mcp",
    "flexprice",
    "invoice",
    "customer",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "axios": "^1.6.7",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "typescript": "^5.3.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/winston": "^2.4.4",
    "jest": "^29.7.0",
    "jest-mock-axios": "^4.7.3",
    "nock": "^13.5.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  }
}